{
  // Glob pattern to find test files. Defaults to the value shown below.
  "bun.test.filePattern": "**/*{.test.,.spec.,_test_,_spec_}{js,ts,tsx,jsx,mts,cts}",
  "workbench.colorTheme": "Bearded Theme Solarized",

  // If support for Bun should be added to the default "JavaScript Debug Terminal".
  "bun.debugTerminal.enabled": true,

  // If the debugger should stop on the first line of the program.
  // "bun.debugTerminal.stopOnEntry": false,

  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit",
    "source.fixAll.biome": "explicit",
    "source.biome": "explicit"
  },
  "biome.requireConfiguration": false,
  "eslint.enable": false,
  "editor.defaultFormatter": "biomejs.biome",
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "typescript.experimental.useTsgo": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "biome.json": ".editorconfig,knip.json",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "bun.lockb,bun.lock,bunfig.toml,turbo.json,LICENSE,.npmrc,excalidraw.log",
    ".env": ".env.*,env.ts,env.*.ts",
    ".vscode": ".github",
    "AGENTS.md": "WARP.md,CLAUDE.md,.mcp.json"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.classpath": true,
    "**/.settings": true,
    ".zed/": true,
    "**/.turbo": true
  }
}
